<?xml version="1.0"?>
<config>
	<tabs>
		<imagegallery translate="label">
			<label>Vsourz Image Gallery</label>
			<sort_order>155</sort_order>
		</imagegallery>
	</tabs>
	<sections>
		<imagegallery translate="label">
			<label>Image Gallery</label>
			<tab>imagegallery</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1000</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<settings translate="label">
					<label>General Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<loadjs translate="label">
							<label>Load JQuery Library</label>
							<comment><![CDATA[Select YES if JQuery library in not included in your Magento Project]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</loadjs>
						<order translate="label">
							<label>Select Order</label>
							<comment><![CDATA[Select the Sorting Order of the images in the gallery ]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>imagegallery/order</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</order>
						<imageloaded translate="label">
							<label>Load Imagesloaded Library</label>
							<comment><![CDATA[Select YES if Imagesloaded library in not included in your Magento Project]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</imageloaded>
					</fields>
				</settings>
			</groups>
		</imagegallery>
	</sections>
</config>